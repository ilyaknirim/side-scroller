{
  "name": "side-scroller",
  "version": "1.0.0",
  "description": "Генератор психологических игровых сессий",
  "type": "module",
  "main": "index.html",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js || true",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\" || true",
    "ci": "npm run lint && npm test -- --coverage"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@testing-library/dom": "^8.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "prettier": "^2.0.0",
    "vite": "^7.1.12"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ]
  }
}
